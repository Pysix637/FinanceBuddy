<Window x:Class="FinanceBuddy.Windows.TransactionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование операции" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование операции" FontSize="18" FontWeight="SemiBold"/>

        <StackPanel Grid.Row="1" Margin="0,14,0,0">
            <TextBlock Text="Тип" Opacity="0.7"/>
            <ComboBox ItemsSource="{Binding TransactionTypes}" SelectedItem="{Binding Type}" />

            <TextBlock Text="Категория" Opacity="0.7" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding Category}" IsEditable="True" />

            <TextBlock Text="Дата" Opacity="0.7" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding Date}" />

            <TextBlock Text="Описание" Opacity="0.7" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Description}" />

            <TextBlock Text="Сумма" Opacity="0.7" Margin="0,10,0,0"/>
            <TextBox Text="{Binding AmountText}" />

            <TextBlock Text="{Binding ValidationText}" Foreground="DarkRed" Margin="0,8,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Отмена" Width="110" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Сохранить" Width="110" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
